<Window x:Class="Lexical_Analyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Lexical_Analyzer"
        mc:Ignorable="d"
        Title="MainWindow"  WindowStyle="None"  WindowState="Maximized">
    <Grid Background="Black" MouseDown="Grid_MouseDown" >
        <Label Foreground="Yellow" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="80" FontFamily="Segoe Print">Lexical Analyzer</Label>
        <Label Foreground="Yellow" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontFamily="Segoe Print" Margin="250,266,250,131">Click anywhere to continue!</Label>
        <DockPanel MouseDown="DockPanel_MouseDown" Cursor="Hand" Height="40" Width="40" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent">
            <materialDesign:PackIcon Kind="Close"  Height="40" Width="40" Foreground="Yellow"></materialDesign:PackIcon>
        </DockPanel>
    </Grid>
</Window>
